{
  "version": 3,
  "configurePresets": [
    {
      "name": "windows-ninja-debug",
      "displayName": "Windows x64 Debug (Ninja)",
      "description": "Sets Ninja generator with MSVC compiler, x64 architecture, debug build type",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "cacheVariables": {
        "CMAKE_INSTALL_PREFIX": "${sourceDir}/out/install/${presetName}",
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "ENABLE_GL_BACKEND": "ON",
        "HM_EDITOR": "ON",
        "ENABLE_VK_BACKEND": "ON"
      },
      "environment": {
        "CC": "cl.exe",
        "CXX": "cl.exe"
      },
      "vendor": {
        "microsoft.com/VisualStudioSettings/CMake/1.0": {
          "hostOS": [ "Windows" ]
        }
      }
    },
    {
      "name": "windows-ninja-develop",
      "displayName": "Windows x64 Develop (Ninja)",
      "description": "Sets Ninja generator with MSVC compiler, x64 architecture, develop build type",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "cacheVariables": {
        "CMAKE_INSTALL_PREFIX": "${sourceDir}/out/install/${presetName}",
        "CMAKE_BUILD_TYPE": "RelWithDebInfo",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "ENABLE_GL_BACKEND": "ON",
        "HM_EDITOR": "ON",
        "ENABLE_VK_BACKEND": "ON"
      },
      "environment": {
        "CC": "cl.exe",
        "CXX": "cl.exe"
      },
      "vendor": {
        "microsoft.com/VisualStudioSettings/CMake/1.0": {
          "hostOS": [ "Windows" ]
        }
      }
    }
  ],
  "buildPresets": [
    {
      "name": "windows-ninja-debug",
      "configurePreset": "windows-ninja-debug"
    },
    {
      "name": "windows-ninja-develop",
      "configurePreset": "windows-ninja-develop"
    }
  ]
}